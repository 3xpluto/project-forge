[build-system]
requires = ["setuptools>=68"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">=3.10"
authors = [{name = "{{ author }}"}]
license = {text = "MIT"}
dependencies = []

[project.scripts]
{{ project_name }} = "{{ package }}.__main__:main"

[tool.pytest.ini_options]
testpaths = ["tests"]
