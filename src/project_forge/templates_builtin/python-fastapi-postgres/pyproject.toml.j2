[build-system]
requires = ["setuptools>=68"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">=3.10"
authors = [{name = "{{ author }}"}]
license = {text = "MIT"}
dependencies = [
  "fastapi>=0.110",
  "uvicorn>=0.27",
  "pydantic-settings>=2.2",
  "sqlalchemy>=2.0",
  "psycopg[binary]>=3.1"
]

[tool.pytest.ini_options]
testpaths = ["tests"]
