{
  "schema_version": 1,
  "vars": {
    "project_name": {"prompt": "Project name", "default": "my-api", "regex": "[a-zA-Z0-9_-]{2,64}"},
    "package": {"prompt": "Python package (import name)", "default": "app", "regex": "[a-zA-Z_][a-zA-Z0-9_]{1,64}"},
    "author": {"prompt": "Author", "default": "you"},
    "description": {"prompt": "Description", "default": "FastAPI + SQLAlchemy service (Postgres-ready)"}
  },
  "files": [
    {"src": "README.md.j2", "dst": "README.md.j2", "mode": "text"},
    {"src": "pyproject.toml.j2", "dst": "pyproject.toml.j2", "mode": "text"},
    {"src": ".gitignore.j2", "dst": ".gitignore.j2", "mode": "text"},
    {"src": "src/{{ package }}/__init__.py.j2", "dst": "src/{{ package }}/__init__.py.j2", "mode": "text"},
    {"src": "src/{{ package }}/config.py.j2", "dst": "src/{{ package }}/config.py.j2", "mode": "text"},
    {"src": "src/{{ package }}/db.py.j2", "dst": "src/{{ package }}/db.py.j2", "mode": "text"},
    {"src": "src/{{ package }}/models.py.j2", "dst": "src/{{ package }}/models.py.j2", "mode": "text"},
    {"src": "src/{{ package }}/main.py.j2", "dst": "src/{{ package }}/main.py.j2", "mode": "text"},
    {"src": "tests/test_health.py.j2", "dst": "tests/test_health.py.j2", "mode": "text"},
    {"src": "tests/test_items.py.j2", "dst": "tests/test_items.py.j2", "mode": "text"}
  ]
}
